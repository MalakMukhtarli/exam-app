@model List<ExamApp.Models.Lessons.LessonViewModel>

@{
    ViewBag.Title = "title";
    var i = 0;
  
}

<div class="row">
        <table class="table table-striped">
          <thead>
            <tr class="table-primary">
              <th scope="col">#</th>
              <th scope="col">Dərsin kodu</th>
              <th scope="col">Dərsin adı</th>
              <th scope="col">Dərsin keçirildiyi siniflər</th>
            </tr>
          </thead>
          <tbody>
          @foreach (var lesson in Model)
          {
            var grades = " ";
            
            <tr>
              <th scope="row">@(++i)</th>
              <td>@lesson.Code</td>
              <td>@lesson.Name</td>
              <td>@foreach (var grade in lesson.Grades)
                  {
                    grades += grade + ", ";
                  }
                @grades
                </td>
            </tr>
          }
          </tbody>
        </table>
      </div>
