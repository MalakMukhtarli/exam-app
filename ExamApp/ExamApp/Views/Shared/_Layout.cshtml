<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ExamApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/ExamApp.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
  <nav class="navbar navbar-expand-lg bg-primary text-light" data-bs-theme="dark">
    <div class="container-fluid px-5 py-3">
      <a class="navbar-brand text-light" href="./index.html">Exam Application</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link text-light" aria-current="page" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="./index.html">Dərslər</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="./teacher.html">Müəllimlər</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Grade" asp-action="Index">Siniflər</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="./pupil.html">Şagirdlər</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="./exam.html">İmtahanlar</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
    
    
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - ExamApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>